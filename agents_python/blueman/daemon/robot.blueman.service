[Unit]
Description=Robot iqrdevice http server daemon
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/agents_python/blueman
ExecStart=/home/ubuntu/agents_python/.venv/bin/python \
          /home/ubuntu/agents_python/blueman/runner.py >> "/home/ubuntu/agents_python/blueman/error.log"
Type=simple
ExecReload=/bin/kill -s HUP $MAINPID
KillMode=mixed
TimeoutStopSec=5
PrivateTmp=true
Restart=always
Environment="PYTHONPATH=/home/ubuntu/agents_python/blueman"
Environment="FLASK_ENV=config.ProductionConfig"

[Install]
WantedBy=multi-user.target